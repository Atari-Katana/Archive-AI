# Archive-AI Production Environment Variables
# Copy this file to .env and configure for your deployment

# === Security ===
REDIS_PASSWORD=changeme_strong_password_here

# === Service Ports (Standardized) ===
BRAIN_PORT=8080
BIFROST_PORT=8081
VORPAL_PORT=8002
GOBLIN_PORT=8003
SANDBOX_PORT=8004
VOICE_PORT=8005
REDIS_UI_PORT=8006
REDIS_PORT=6379

# === Internal Service URLs ===
BIFROST_URL=http://bifrost:8080
VORPAL_URL=http://vorpal:8000
GOBLIN_URL=http://goblin:8080
VOICE_URL=http://voice:8000
SANDBOX_URL=http://sandbox:8000
REDIS_URL=redis://redis:6379

# === Brain Settings ===
MAX_TOKENS=1024
DEFAULT_ENGINE=vorpal

# === Memory Archival ===
ARCHIVE_DAYS=30
ARCHIVE_KEEP=1000
ARCHIVE_HOUR=3
ARCHIVE_MINUTE=0

# === Voice Configuration ===
WHISPER_MODEL=base
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16
TTS_DEVICE=cuda
TTS_MODEL_PATH=/app/models/xtts

# === Library Drop Location ===
LIBRARY_DROP=~/ArchiveAI/Library-Drop

# === Logging ===
LOG_LEVEL=INFO

# === GPU Configuration ===
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_UTILIZATION=0.22
VORPAL_GPU_MEMORY_UTILIZATION=0.55
VORPAL_MAX_MODEL_LEN=4096

# === Metrics Collection ===
METRICS_ENABLED=true
METRICS_INTERVAL=30

# === Config UI ===
CONFIG_UI_ENABLED=true

# === Vorpal Configuration ===
VORPAL_MODEL=Llama-3.2-3B-Instruct
VORPAL_MODEL_PATH=/models/Llama-3.2-3B-Instruct-Q4_K_M.gguf
VORPAL_CTX_SIZE=4096
VORPAL_THREADS=8

# === Bolt-XL Configuration ===
# IMPORTANT: Bolt-XL requires a compatible model (standard transformers)
# Current default: TinyLlama/TinyLlama-1.1B-Chat-v1.0 (lightweight, fast)
# Other options:
#   - Qwen/Qwen2.5-3B-Instruct (better quality, more VRAM)
#   - meta-llama/Llama-2-7b-chat-hf (requires HF token)
# Note: Qwen3-OmniMoE (currently in models/bolt-xl/) is NOT compatible
BOLT_MODEL=google/gemma-2b-it
BOLT_XL_MODEL=google/gemma-2b-it
BOLT_DTYPE=float16
BOLT_XL_URL=http://bolt-xl:3000
BOLT_XL_PORT=8007

# HuggingFace Token (required for some models)
HF_TOKEN=

# === Cloudflare / Public Access ===
PUBLIC_URL=http://localhost:8080
TRUST_PROXY=false
